{
  "extends": "./tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "build",
    "declaration": true,
    "declarationDir": "build/types",
    "declarationMap": true,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false,
    "emitDeclarationOnly": true
  },
  "exclude": ["**/*.test.ts"]
}
