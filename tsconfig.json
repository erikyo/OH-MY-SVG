{
	"compilerOptions": {
		"target": "ES2021",
		"module": "esnext",
		"jsx": "react-jsx",
		"moduleResolution": "node",
		// Search under node_modules for non-relative imports.
		"allowJs": true,
		// Process & infer types from .js files.
		"noEmit": true,
		// Don't emit; allow Babel to transform files.
		"outDir": "build",
		"baseUrl": "./src"
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx"
	],
	"exclude": [
		"coverage",
		"docs"
	]
}
